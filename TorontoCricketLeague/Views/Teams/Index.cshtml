@model IEnumerable<TorontoCricketLeague.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">Create New Team</a>
    </div>

    @if (!Model.Any())
    {
        <div class="text-center">
            <p>No teams found. Get started by creating one!</p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model) {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                            <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.Franchise.Name)</h6>
                            <p class="card-text">
                                <small>@Html.DisplayFor(modelItem => item.City)</small>
                            </p>
                        </div>
                        <div class="card-footer bg-white">
                            <a asp-action="Edit" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-info">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.TeamId" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
