@model TorontoCricketLeague.Models.Player

@{
    ViewData["Title"] = "Player Details";
}

<div class="container">
    <h1 class="display-4">@Model.Name</h1>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">Age</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Age)</dd>
        <dt class = "col-sm-2">Role</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Role)</dd>
        <dt class = "col-sm-2">Team</dt>
        <dd class = "col-sm-10">@Html.DisplayFor(model => model.Team.Name)</dd>
    </dl>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.PlayerId" class="btn btn-primary">Edit</a> 
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>