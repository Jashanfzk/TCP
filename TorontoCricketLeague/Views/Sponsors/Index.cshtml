@model IEnumerable<TorontoCricketLeague.Models.Sponsor>

@{
    ViewData["Title"] = "Sponsors";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4">@ViewData["Title"]</h1>
        <a asp-action="Create" class="btn btn-primary btn-lg">Create New Sponsor</a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Sponsor Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model) {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@item.SponsorId" class="btn btn-sm btn-outline-primary">Edit</a>
                                <a asp-action="Delete" asp-route-id="@item.SponsorId" class="btn btn-sm btn-outline-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div> 